<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listItemHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:layout_marginVertical="2dp"
    >

    <TextView
        android:id="@+id/activityNameListItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/form_vertical_margin"
        android:layout_marginHorizontal="@dimen/form_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activityMetaListItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/form_vertical_margin"
        android:layout_marginHorizontal="@dimen/form_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/activityNameListItemTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/activityListItemDeleteButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:tint="@color/lightRedColor"
        android:layout_marginVertical="@dimen/form_vertical_margin"
        android:layout_marginHorizontal="@dimen/form_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>